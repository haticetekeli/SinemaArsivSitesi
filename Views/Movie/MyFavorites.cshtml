@model List<SinemaArsivSitesi.Models.Movie>

@{
    ViewData["Title"] = "Favori Filmlerim";
}

<div class="container mt-4">
    <div class="row mb-4">
        <div class="col">
            <h2>Favori Filmlerim</h2>
        </div>
        <div class="col text-end">
            <a asp-action="Index" class="btn btn-secondary">Tüm Filmler</a>
        </div>
    </div>

    <div class="row">
        @foreach (var movie in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="card h-100">
                    <img src="@movie.PosterUrl" class="card-img-top" alt="@movie.Title" style="height: 400px; object-fit: cover;">
                    <div class="card-body">
                        <h5 class="card-title">@movie.Title</h5>
                        <p class="card-text">@movie.Description</p>
                        <p class="card-text"><small class="text-muted">Tür: @movie.Category.Name</small></p>
                        
                        <form asp-action="RemoveFromFavorites" method="post">
                            <input type="hidden" name="movieId" value="@movie.Id" />
                            <button type="submit" class="btn btn-danger">
                                <i class="fas fa-heart-broken"></i> Favorilerden Çıkar
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        }
    </div>
</div> 